{
  "name": "mailpit-api",
  "version": "1.3.1",
  "description": "A NodeJS client library, written in TypeScript, to interact with the Mailpit API.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpspahr/mailpit-api.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "test": "echo \"TODO: Add tests\" && exit 0",
    "build": "tsup src/index.ts --dts --format esm,cjs --outDir dist",
    "pretty": "npx prettier . --write",
    "lint": "npx eslint --fix src",
    "docs": "typedoc --readme none"
  },
  "keywords": [
    "mailpit-api",
    "mailpit",
    "api",
    "client",
    "library",
    "wrapper",
    "email",
    "typescript",
    "nodejs"
  ],
  "author": "Matthew Spahr",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/node": "^22.15.18",
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typedoc": "^0.28.4",
    "typedoc-github-wiki-theme": "^2.1.0",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}
