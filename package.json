{
  "name": "mailpit-api",
  "version": "1.4.0",
  "description": "A NodeJS client library, written in TypeScript, to interact with the Mailpit API.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpspahr/mailpit-api.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "test:unit": "jest **/index.spec.ts",
    "test:e2e": "jest **/e2e/index.e2e.spec.ts --runInBand",
    "test": "jest",
    "coverage": "jest --coverage",
    "build": "tsup src/index.ts --dts --format esm,cjs --outDir dist",
    "pretty": "npx prettier . --write",
    "lint": "npx eslint --fix src tests",
    "docs": "typedoc"
  },
  "keywords": [
    "mailpit-api",
    "mailpit",
    "api",
    "client",
    "library",
    "wrapper",
    "email",
    "typescript",
    "nodejs"
  ],
  "author": "Matthew Spahr",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.9.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@jest/globals": "^29.7.0",
    "@types/node": "^22.15.29",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "eslint-plugin-jest": "^28.12.0",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.4",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typedoc": "^0.28.5",
    "typedoc-github-theme": "^0.3.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  }
}
