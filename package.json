{
  "name": "mailpit-api",
  "version": "1.3.0",
  "description": "A NodeJS client library, written in TypeScript, to interact with the Mailpit API.",
  "repository": {
    "type": "git",
    "url": "https://github.com/mpspahr/mailpit-api.git"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "test": "echo \"TODO: Add tests\" && exit 0",
    "build": "rm -fr dist/* && tsc -p tsconfig.json && tsc -p tsconfig-cjs.json && ./fixup_type",
    "pretty": "npx prettier . --write",
    "lint": "npx eslint --fix src",
    "docs": "typedoc --readme none"
  },
  "keywords": [
    "mailpit-api",
    "mailpit",
    "api",
    "client",
    "library",
    "wrapper",
    "email",
    "typescript",
    "nodejs"
  ],
  "author": "Matthew Spahr",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.8.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/eslint__js": "^8.31.1",
    "@types/node": "^22.15.3",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "prettier": "3.5.3",
    "tsx": "^4.19.4",
    "typedoc": "^0.28.3",
    "typedoc-github-wiki-theme": "^2.1.0",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  }
}
